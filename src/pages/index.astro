---
import '../styles/global.css';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
        <script is:inline>
            // Immediately check local storage or system preference to avoid flash
            if (
              localStorage.theme === 'dark' ||
              (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
            ) {
              document.documentElement.classList.add('dark');
            } else {
              document.documentElement.classList.remove('dark');
            }
          </script>
	</head>
	<body class="bg-surface-light text-on-surface-light dark:bg-surface-dark dark:text-on-surface-dark transition-colors duration-300 min-h-screen flex flex-col items-center justify-center">
        <ThemeToggle />
		<h1 class="text-4xl font-bold text-primary-light dark:text-primary-dark mb-4">Astro Theme Switcher</h1>
        <p class="text-lg opacity-80">Android Material 3 Colors</p>
	</body>
</html>
